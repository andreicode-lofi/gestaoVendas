@model IEnumerable<DepartmentModel>

@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<h1>Departments</h1>
<br />

<a asp-action="Create" type="button" class="btn btn-outline-primary">Create New</a>

<br />
<br />

<table class="table table-Primary" id="minha-tabela">
    <thead>
        <tr class="table-primary">
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if(Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr class="table-dark">
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td><a asp-action="Edit" asp-route-id="@item.Id">Edit</a> </td>
                    <td><a asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                    <td><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                </tr>
            }
        }
    </tbody>
</table>
